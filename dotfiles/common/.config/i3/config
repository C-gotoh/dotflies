#== bar definition
bar {
        position top
        status_command i3blocks
        strip_workspace_numbers yes
        #separator_symbol " "
        #separator_symbol " *"
        #separator_symbol " ❮"
        #separator_symbol "∗"
        separator_symbol " "
        i3bar_command i3bar -t
        colors {
            statusline         $white
            background         $barbg
            separator          $green

            #                  BORDER       BACKGROUND   TEXT
            focused_workspace  $barbg       $barbg       $red
            inactive_workspace $barbg       $barbg       $white
            active_workspace   $barbg       $barbg       $white
            urgent_workspace   $darkred     $darkred     $transparent
            binding_mode       $darkred     $darkred     $transparent
        }
}



